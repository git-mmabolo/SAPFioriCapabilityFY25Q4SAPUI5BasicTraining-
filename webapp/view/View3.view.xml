<mvc:View xmlns:core="sap.ui.core" controllerName="project2.controller.View3"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns="sap.m">
    <Page id="pageView3" title="{i18n>title}">
        <content>
            <VBox id="exer3VBox1" class="sapUiSmallMargin" alignItems="Center">
                <HBox id="exer3HBox1" class="sapUiSmallMargin" alignItems="Center">
                    <Text id="eXer3txt" width="180px" text="Number to Word Converter:" />
                    <Input id="valTxt" width="450px" placeholder="Enter a number" />
                    <Button id="bTnConv" text="Convert" press="onPressConvert"  ></Button>
                </HBox>

                <HBox id="exer3VBox2" class="sapUiSmallMargin" alignItems="Center">
                    <TextArea id="eXer3txt1" rows="7" width="400px" editable="false" />
                </HBox>

                <HBox id="exer3VBox3" class="sapUiSmallMargin" alignItems="Center">
                    <TextArea id="eXer3txt2" rows="7" width="400px" editable="false"/>
                </HBox>

                <HBox id="exer3VBox4" class="sapUiSmallMargin" alignItems="Center">
                    <TextArea id="eXer3txt3" rows="10" width="400px" editable="false"/>
                </HBox>    

                <HBox id="exer3VBox5" class="sapUiSmallMargin" alignItems="Center">
                    <TextArea id="eXer3txt4" rows="10" width="400px" editable="false"/>
                </HBox>                            
            </VBox>                
        </content>
    </Page>
</mvc:View>